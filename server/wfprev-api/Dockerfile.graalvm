FROM ubuntu:latest

RUN apt-get update && apt-get install -y \
    libc6 \
    libstdc++6 \
    curl \
    postgresql-client \
    gdb \
    && rm -rf /var/lib/apt/lists/*



# Copy the native executable from builder stage
COPY ./wfprev-api /app/

RUN chmod -x /app/wfprev-api

EXPOSE 8080

RUN chmod +x /app/wfprev-api

ENTRYPOINT ["/app/wfprev-api"]